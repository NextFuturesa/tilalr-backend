# ==========================================
# Tilalr Full Stack - Environment Variables
# ==========================================
# انسخ هذا الملف إلى .env وعدّل القيم
# cp .env.full-stack.example .env
# ==========================================

# ===========================================
# App Configuration
# ===========================================
APP_ENV=local
APP_DEBUG=true
APP_KEY=base64:YOUR_APP_KEY_HERE

# ===========================================
# Database Configuration
# ===========================================
DB_ROOT_PASSWORD=rootpassword
DB_DATABASE=tilalr
DB_USERNAME=tilalr_user
DB_PASSWORD=tilalr_password
DB_PORT=3306

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PORT=6379

# ===========================================
# Ports Configuration
# ===========================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ===========================================
# Backend URL
# ===========================================
BACKEND_URL=http://localhost:8000

# ===========================================
# Auto Migration (للتشغيل الأول)
# ===========================================
AUTO_MIGRATE=true

# ===========================================
# Mail Configuration (اختياري)
# ===========================================
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tilalr.com
MAIL_FROM_NAME=Tilalr

# ===========================================
# Stripe Configuration
# ===========================================
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ===========================================
# Firebase Configuration
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
