APP_NAME=Tilal Rimal
APP_ENV=production
APP_DEBUG=true  # Temporarily set to true for debugging
APP_URL=https://admin.tilalr.com
FRONTEND_URL=https://tilalr.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Domains allowed for stateful (Sanctum) cookies
SANCTUM_STATEFUL_DOMAINS=tilalr.com,admin.tilalr.com

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tilalrimal
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.tilalr.com
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ============================================================================
# OTP & SMS Configuration
# ============================================================================
# OTP_MODE options:
# - 'fixed': Development mode - uses OTP_FIXED_CODE (default: 1234)
# - 'random': Generates random 6-digit codes (logged but not sent)
# - 'sms': Production mode - sends real SMS via configured provider
OTP_MODE=fixed
OTP_FIXED_CODE=123456
OTP_EXPIRY_MINUTES=5

# SMS Provider: 'taqnyat' (Saudi), 'twilio', 'log' (development)
SMS_PROVIDER=log

# ============================================================================
# Taqnyat.sa SMS Provider (Recommended for Saudi Arabia)
# ============================================================================
# Register at: https://taqnyat.sa
# API Documentation: https://api.taqnyat.sa/
# 
# Setup:
# 1. Create account at taqnyat.sa
# 2. Go to Developer > Application > Create new app (enable SMS)
# 3. Copy Bearer Token
# 4. Get Sender Name approved
#
# Phone format: 966500000000 (international format, no + or 00)
TAQNYAT_BEARER_TOKEN=
TAQNYAT_SENDER=

# Twilio SMS (International)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
