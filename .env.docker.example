# ==========================================
# Tilalr Backend - Environment Template
# ==========================================
# Copy this file to .env.docker and configure
# ==========================================

# ===========================================
# App Configuration
# ===========================================
APP_NAME=Tilalr
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# ===========================================
# Database Configuration
# ===========================================
DB_ROOT_PASSWORD=rootpassword
DB_DATABASE=tilalr
DB_USERNAME=tilalr_user
DB_PASSWORD=tilalr_password
DB_PORT=3306

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PORT=6379

# ===========================================
# Port Configuration
# ===========================================
BACKEND_PORT=8000

# ===========================================
# Auto Migration
# ===========================================
AUTO_MIGRATE=true

# ===========================================
# Mail Configuration
# ===========================================
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tilalr.com
MAIL_FROM_NAME=Tilalr

# ===========================================
# Stripe Configuration
# ===========================================
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
